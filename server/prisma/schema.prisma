// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @unique @default(uuid())
  username   String
  email      String   @unique
  avatar_url String
  google_id  String
  created_at DateTime @default(now())

  account Account[]

  @@map("users")
}

model Account {
  id          String   @unique @default(uuid())
  description String
  type        String
  category    String
  date        DateTime
  price       Float
  user_id     String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user User @relation(fields: [user_id], references: [id])

  @@map("accounts")
}
